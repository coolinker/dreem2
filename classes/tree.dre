<!--/**
   * @class dr.tree {UI Components}
   * @extends dr.view
   * An visual component whose state represents a node in a tree structure.  Trees will try to interpret many different
   * data formats, but the preferred is an array of objects that have a "label" text property and optionally an "nodes"
   * property which can contain more nodes.  The simplest example, for example, might look like this:
   * `[{"label":"first node", "nodes": [{"label":"inner node"}], {"label":"second top node"}]`
   *
   *     @example
   *
   *     <tree name="simple" height="200" width="200" border="1" bordercolor="#eee"
   *      data='[{"label":"first", "items": [1, 2, 3]}]'></tree>
   *
   */-->
<class name="tree" extends="view" clip="false" scrollable="true">

  <attribute name="strict" type="boolean" value="true"></attribute>

  <attribute name="root" type="object" value=""></attribute>
  <attribute name="isroot" type="boolean" value="true"></attribute>

  <attribute name="data" type="object" value=""></attribute>
  <attribute name="populated" type="boolean" value="false"></attribute>
  <attribute name="populating" type="boolean" value="false"></attribute>

  <attribute name="multipleselection" type="boolean" value="true"></attribute>
  <attribute name="branchselection" type="boolean" value="false"></attribute>
  <attribute name="selected" type="boolean" value="false"></attribute>
  <attribute name="selectcolor" type="color" value="#eee"></attribute>

  <attribute name="collapsed" type="boolean" value="false"></attribute>

  <attribute name="indentwidth" type="number" value="0"></attribute>


  <method name="__findtreeroot">
    if (this.parent && this.parent.__findtreeroot) {
      return this.parent.__findtreeroot();
    }
    return this;
  </method>

  <method name="populate">
    if (typeof(this.data) === 'undefined') {
      return;
    }
    if (this.populated) {
      this.setAttribute('populated', false);
    }
    this.setAttribute('populating', true);

    var d = this.data;
    if (typeof(d) === 'string' && ((d[0] == '[' && d[d.length - 1] == ']') || (d[0] == '{' && d[d.length - 1] == '}'))) {
      try {
        d = this.data = JSON.parse(d);
      } catch (e) {
        console.log('String looked like JSON but had error parsing', e, d);
      }
    }
    if (typeof(d) === 'number') {
      d = d.toString();
    }

    if (typeof(d) === 'string') {
      this.label.setAttribute('text', d);
    } else if (!Array.isArray(d)) {

      if (d.image) {
        this.image.setAttribute('src', d.image);
        this.image.setAttribute('visible', true);
      }

      if (d.title) {
        this.label.setAttribute('text', d.title)
      } else if (d.label) {
        this.label.setAttribute('text', d.label)
      } else if (d.text) {
        this.label.setAttribute('text', d.text)
      } else if (d.name) {
        this.label.setAttribute('text', d.name)
      } else if (d.tag) {
        this.label.setAttribute('text', d.tag)
      } else {
        this.label.setAttribute('visible', false);
      }

      if (Array.isArray(d.items)) {
        d = d.items;
      } else if (Array.isArray(d.nodes)) {
        d = d.nodes;
      } else if (Array.isArray(d.children)) {
        d = d.children;
      } else if (Array.isArray(d.child)) {
        d = d.child;
      } else if (!this.strict) { //be fancy
        var found = [];
        var props = Object.getOwnPropertyNames(d);
        for (var i=0; i < props.length; i++) {
          var name = props[i];
          if (name == 'title' || name == 'text' || name == 'label' || name == 'name' || name == 'tag') {
            continue;
          }
          var value = d[name];
          if (!Array.isArray(value)) {
            value = [value];
          }
          found.push({name:name, items:value})
        }
        if (found.length) {
          d = found;
        }
      }
    }

    if (d.title) {
      this.label.setAttribute('text', d.title)
    } else if (d.label) {
      this.label.setAttribute('text', d.label)
    } else if (d.text) {
      this.label.setAttribute('text', d.text)
    } else if (d.name) {
      this.label.setAttribute('text', d.name)
    } else if (d.tag) {
      this.label.setAttribute('text', d.tag)
    }

    if (Array.isArray(d)) {
      this.nodes.setAttribute('data', d);
    }

    if (this.isroot) {
      this.toggle.setAttribute('visible', false);
    }

    var x = 0;
    if (this.toggle.visible) {
      x = x + this.toggle.width;
      this.setAttribute('indentwidth', x);
    }
    if (this.image.visible) {
      if (this.toggle.visible) {
        this.image.setAttribute('x', this.toggle.width);
      } else {
        this.image.setAttribute('x', 0);
      }
      x = x + this.image.width;
    }
    this.label.setAttribute('x', x + 5);

    this.setAttribute('populating', false);
    this.setAttribute('populated', true)
  </method>

  <method name="__resizeToChildren">
    var childheight = 0;
    var childwidth = 0;

    for (var i =0; i < this.subviews.length; i++) {
      var child = this.subviews[i];
      if (child.__resizeToChildren) {
        child.__resizeToChildren();
      }
      if (child.visible){
        childheight = Math.max(childheight, child.y + child.height);
        childwidth = Math.max(childwidth, child.x + child.width)
      }
    }
    this.setAttribute('height', childheight);
    this.setAttribute('width', childwidth);
  </method>

  <method name="clearSelection">
    this.setAttribute('selected', false);
    for (var i = 0; i < this.subviews.length; i++) {
      var subview = this.subviews[i];
      if (subview.clearSelection) {
        subview.clearSelection();
      }
    }
  </method>

  <method name="selectHandler" args="selecting, data">
    if (this.parent.selectHandler) {
      this.parent.selectHandler(selecting, data);
    }
  </method>

  <method name="__setToggleRotation">
    if (this.collapsed) {
      this.toggle.setAttribute('rotation', -135);
    } else {
      this.toggle.setAttribute('rotation', -45);
    }
  </method>

  <method name="triggerSelection" args="sel">
    if (!this.root.multipleselection) {
      this.root.clearSelection();
    }

    this.setAttribute('selected', sel)
    this.selectHandler(this.selected, this.data);
  </method>

  <handler event="oninit">
    this.setAttribute('root', this.__findtreeroot())
    this.setAttribute('isroot', this.root === this)
    this.populate();
  </handler>

  <handler event="ondata" method="populate"></handler>

  <handler event="onselected">
    if (this.selected) {
      this.label.setAttribute('bgcolor', this.selectcolor)
    } else {
      this.label.setAttribute('bgcolor', 'transparent')
    }

    if (this.root.branchselection && !this.isroot) {
      this.parent.setAttribute('selected', this.selected);
    }
  </handler>

  <handler event="oncollapsed">
    this.__setToggleRotation();
    if (this.nodes.children) {
      for (var i = 0; i < this.nodes.children.length; i++) {
        var child = this.nodes.children[i];
        child.setAttribute('visible', !this.collapsed)
      }
      this.__resizeToChildren();
      var parent = this.parent;
      while (parent) {
        if (parent.__resizeToChildren) {
          parent.__resizeToChildren();
        }
        parent = parent.parent;
      }
    }
  </handler>

  <method name="__setToggleRotation">
    if (this.collapsed) {
      this.toggle.setAttribute('rotation', -135);
    } else {
      this.toggle.setAttribute('rotation', -45);
    }
  </method>

  <method name="triggerSelection" args="sel">
    if (!this.root.multipleselection) {
      this.root.clearSelection();
    }

    this.setAttribute('selected', sel)
    this.selectHandler(this.selected, this.data);
  </method>

  <indicator with="button" name="toggle" fill="${this.parent.bordercolor}" visible="false"
    x="0" y="${this.parent.label.height / 2 - this.height / 2}" width="20"
    rotation="-45" fill="#333" xanchor="middle" yanchor="middle" focusembellishment="false"
  >
    <method name="doActivated">
      this.parent.setAttribute('collapsed', !this.parent.collapsed)
    </method>
  </indicator>

  <bitmap name="image" visible="false" height="20" width="20"></bitmap>

  <text with="button" name="label" text="" editable="false" focusembellishment="false">
    <method name="doActivated">
      var sel = this.parent.selected;
      this.parent.triggerSelection(!sel);
    </method>
  </text>

  <replicator name="nodes" classname="tree">
    <handler event="onreplicated" args="r">

      if (r.children.length) {
        this.parent.toggle.setAttribute('visible', true);
      } else {
        this.parent.toggle.setAttribute('visible', false);
      }

      for (var i = 0; i < r.children.length; i++) {
        var child = r.children[i];
        child.__resizeToChildren();

        child.setAttribute('x', '${this.parent.indentwidth}');
        child.setAttribute('name', 'treenode_' + i);
        if (i) {
          var lastChild = i - 1;
          child.setAttribute('y', '${this.parent.treenode_' + lastChild + '.y + this.parent.treenode_' + lastChild + '.height + 5}');
        } else {
          child.setAttribute('y', '${this.parent.label.height + 5}');
        }
      }

      this.parent.__resizeToChildren();
    </handler>
  </replicator>

</class>
